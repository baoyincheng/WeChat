/* pages/message/message.wxss */
/* 卡片 */
.card{
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  margin: 60rpx 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column

}
/* 标题 */
.card-title{
  font-size:20px;
  margin-bottom: 20rpx; 
}
/* 日期 */
.card-data{
  font-size: 14px;
  color:#ccc;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
/* 图片 */
.card-img{
  width: 100%;
  height: 300rpx;
}
/* 描述 */
.card-desc{
  font-size: 16px;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom:1rpx solid #ddd;
  margin:20rpx 0; 
}
/* 查看 */
.card-rad{
  font-size: 14px;
  color:#666;
}