.avatar{
  background-image:url("http://127.0.0.1:3000/img/bg.jpg");
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  /* 居中 */
  align-items: center;
}
.avatar image{
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  border:3px solid rgba(0,0,0,0.3);
}

.userinfo {
  display: flex;
  flex-direction: column; 
  align-items: center;
}
.user-btn{
  width: 140rpx;
  height: 80rpx;
  font-size: 15px;
  line-height: 80rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}